<!-- Fixed Back Button -->
<button onclick="window.history.back();" class="btn btn-secondary btn-lg back-btn">
    <i class="fa fa-arrow-left"></i> Back
</button>

<style>
    .back-btn {
        position: fixed;
        left: 20px;
        bottom: 20px;
        font-size: 18px;
