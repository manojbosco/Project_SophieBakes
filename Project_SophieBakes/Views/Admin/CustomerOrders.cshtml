@model IEnumerable<Project_SophieBakes.Models.Order>




@{
    ViewData["Title"] = "Customer Orders";
}

<h2>Customer Orders</h2>

<table class="table">
    <thead>
    <tr>
        <th>Order ID</th>
        <th>Customer</th>
        <th>Total Price</th>
        <th>Status</th>
        <th>Order Date</th>
        
    </tr>
    </thead>
    <tbody>
    @foreach (var order in Model)
    {
        <tr>
            <td>@order.OrderId</td>
            <td>@order.User.Name (@order.User.Email)</td>
            <td>@order.TotalAmount.ToString("C", new System.Globalization.CultureInfo("en-US"))</td>
            <td>@order.Status</td>
            <td>@order.OrderDate.ToString("yyyy-MM-dd HH:mm")</td>
            
        </tr>
    }
    </tbody>
</table>
<button onclick="window.history.back();" class="btn btn-secondary btn-lg back-btn">
    <i class="fa fa-arrow-left"></i> Back
</button>
<style>
    .back-btn {
        position: fixed;
        left: 20px;
        bottom: 20px;
        font-size: 18px;
        padding: 10px 20px;
        border-radius: 8px;
        background-color: #6c757d;
        color: white;
        border: none;
        transition: background 0.3s ease-in-out;
    }
</style>